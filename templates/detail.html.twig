            {# TABLE #}
            <div class="recipe__item recipe__item--column">

                {#TABLE CONTROLS #}
                <div class="recipe__tab-controls-holder">
                    <button
                        class="tablinks active"
                        onclick="openTab(event, 'ingredients')"
                    >
                        Ingrediënten
                    </button>
                    <button
                        class="tablinks"
                        onclick="openTab(event, 'recipe')"
                    >
                        Bereidingswijze
                    </button>
                    <button
                        class="tablinks"
                        onclick="openTab(event, 'comments')"
                    >
                        Opmerkingen
                    </button>
                </div>

                {# TABLE CONTENT #}
                <div class="recipe__tab-content-holder">

                    {# INGREDIENTS #}
                    <div class="tablecontent active" data-tab="ingredients">
                    
                     {% for record in ingredient_data %}
                        <div class="table__content-holder">
                            <div class="table__content-image">
                                <img class="table__content-image" src="{{ record.article_packaging }}"/>
                            </div>
                            <div class="table__content-text-holder">
                                <div class="pretty-lily table__content-text-title">
                                    {{ record.article_name }}
                                </div>
                                <div class="table__content-text-description">
                                    {{ record.article_description }}
                                </div>
                                <div class="table__content-bottom-holder">
                                    <div class="pretty-lily table__content-bottom-text">
                                        Hoeveelheid
                                    </div>
                                    <div class="table__content-bottom-amount">
                                        {{ record.article_unit }}
                                    </div>
                                </div>
                            </div>
                        </div>
                    {% endfor %}

                    </div>

                    {# RECIPE #}
                    <div class="tablecontent" data-tab="recipe">

                        {% for record in preparation_data %}
                        <div class="table__content-holder--column">
                            <div class="table__content-info-holder">
                                <div class="table__content-step--background">
                                    <div class="table__content-step--number">
                                        {{ record.number_field }}
                                    </div>                                   
                                </div>
                                <div class="table__content-step--description">
                                    {{ record.text_field }}
                                </div>
                            </div>
                        </div>
                        {% endfor %}

                    </div>

                            {# COMMENTS #}
                            <div class="tablecontent" data-tab="comments">
                                <div class="table__content-holder">
                                    <div class="table__content-comment-holder">

                                        {% for record in comments_data %}
                                        <div class="table__content-comment-content-holder">
                                            <img class="table__content-comment-profile-picture" src="{{ record.user_image }}"/>
                                            <div class="table__content-comment-text-holder">
                                                <div class="pretty-lily table__content-comment-profile-name">
                                                    {{ record.username }}
                                                </div>
                                                <div class="table__content-comment-content">
                                                    {{ record.text_field }}
                                                </div>
                                            </div>
                                        </div>
                                        {% endfor %}

                                    </div>
                                </div>
                            </div>

                            {# SCROLL #}
                            <div class="table__scroll">
                                <svg xmlns="http://www.w3.org/2000/svg" height="1em" viewBox="0 0 512 512"><path d="M233.4 406.6c12.5 12.5 32.8 12.5 45.3 0l192-192c12.5-12.5 12.5-32.8 0-45.3s-32.8-12.5-45.3 0L256 338.7 86.6 169.4c-12.5-12.5-32.8-12.5-45.3 0s-12.5 32.8 0 45.3l192 192z"/>
                                </svg>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

       

