                {# LOGIN #}
                <div class="col-md-12 content__container-login-holder">
                    <img class="content__container-login-image-holder" src="assets/img/verrukkulluk-login.png"/>
                    <div class="content__container-login-input-holder">
                        <input class="content__container-login-input--email" placeholder="Email"/>
                        <input class="content__container-login-input--password" placeholder="Wachtwoord"/>
                    </div>
                    <div class="pretty-lily content__container-login-button">
                    <div class="content__container-login-button--text">Login
                    </div>
                    </div>
                </div>
            </div>
        </div>


        {# SHOPPING LIST PLACEHOLDER #}
        <div class="col-md-9">
            <div class="shoppinglist__content-holder">
                <div class="shoppinglist__content-title-holder">
                    <div class="pretty-lily shoppinglist__content-title-text">
                        Jouw boodschappen
                    </div>
                </div>
                <div class="shoppinglist__content-articles-holder">
                {% for record in articleOnList_data %}
                
                    <div class="shoppinglist__content-articles-info-holder">
                        <div class="table__content-image">
                            <img class="table__content-image" src="{{ record.article_packaging }}"/>
                        </div>
                        <div class="table__content-text-holder">
                            <div class="pretty-lily table__content-text-title">
                                {{ record.article_name}}
                            </div>
                            <div class="table__content-text-description">
                                {{ record.article_description }}
                            </div>
                            <div class="table__content-bottom-holder">
                                <div class="pretty-lily table__content-bottom-text">
                                    Hoeveelheid
                                </div>
                                <div class="table__content-bottom-amount">
                                    {{ record.amount}}
                                </div>
                            </div>
                        </div>
                        <div class="shoppinglist__content-icon-holder">
                            <svg xmlns="http://www.w3.org/2000/svg" height="1em" viewBox="0 0 448 512"><path d="M135.2 17.7C140.6 6.8 151.7 0 163.8 0H284.2c12.1 0 23.2 6.8 28.6 17.7L320 32h96c17.7 0 32 14.3 32 32s-14.3 32-32 32H32C14.3 96 0 81.7 0 64S14.3 32 32 32h96l7.2-14.3zM32 128H416V448c0 35.3-28.7 64-64 64H96c-35.3 0-64-28.7-64-64V128zm96 64c-8.8 0-16 7.2-16 16V432c0 8.8 7.2 16 16 16s16-7.2 16-16V208c0-8.8-7.2-16-16-16zm96 0c-8.8 0-16 7.2-16 16V432c0 8.8 7.2 16 16 16s16-7.2 16-16V208c0-8.8-7.2-16-16-16zm96 0c-8.8 0-16 7.2-16 16V432c0 8.8 7.2 16 16 16s16-7.2 16-16V208c0-8.8-7.2-16-16-16z"/>
